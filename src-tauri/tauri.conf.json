{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SplitRun",
  "version": "0.1.0",
  "identifier": "com.paszq.splitrun.app",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SplitRun",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "config",
        "title": "Configuration",
        "width": 520,
        "height": 520,
        "resizable": true,
        "visible": false,
        "center": true,
        "url": "config.html"
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Speedrun timer with splits tracking",
    "longDescription": "A comprehensive speedrun timer application with customizable splits, personal best tracking, and detailed statistics."
  }
}
